# Based on the popular LLVM style, modified for strict "one statement per line" rule.
BasedOnStyle: LLVM

# --- Indentation and Spacing ---
# Use 4 spaces for indentation.
IndentWidth: 4
# Use spaces instead of tabs.
UseTabs: Never
# Maximum line length (adjust as needed; a smaller limit encourages more breaks).
ColumnLimit: 80

# --- Enforcing "One Statement Per Line" ---
# Prevents putting short 'if' statements on the same line (e.g., 'if (a) return;').
AllowShortIfStatementsOnASingleLine: Never
# Prevents putting short loops on the same line (e.g., 'while (true) break;').
AllowShortLoopsOnASingleLine: false
# Prevents putting empty or short blocks {} on a single line.
AllowShortBlocksOnASingleLine: false

# --- Brace Placement and New Lines ---
# Put the opening brace of a function on a new line.
BreakBeforeBraces: Linux
# Ensure a new line before an 'else' statement.
AlwaysBreakBeforeElse: true
# Control of individual brace wrapping cases
BraceWrapping:
  AfterClass: true
  AfterControlStatement: true
  AfterFunction: true
  AfterEnum: true
  AfterStruct: true
  AfterUnion: true
  BeforeCatch: true
  BeforeElse: true
  # Add a new line after the opening brace of a control statement
  AfterControlStatementBranch: true

# --- General C++ Options ---
# Aligns pointers to the left (e.g., 'int* ptr' instead of 'int *ptr').
PointerAlignment: Left
# Language the style is for.
Language: Cpp
